@{
    ViewData["Title"] = "Dịch vụ";
}

<div class="container py-5">
    <div class="text-center mb-5 animate__animated animate__fadeIn">
        <h1 class="display-4 fw-bold text-primary mb-4">Dịch Vụ Của Chúng Tôi</h1>
        <div class="row mb-4">
            <div class="col-md-8 mx-auto">
                <p class="lead text-muted">Chúng tôi cung cấp nhiều loại dịch vụ spa chất lượng cao. Khám phá các dịch vụ dưới đây và chọn dịch vụ phù hợp với nhu cầu của bạn.</p>
            </div>
        </div>
    </div>
    
    <!-- Services Container -->
    <div id="servicesContainer" class="row">
        <div class="col-12 text-center py-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Đang tải...</span>
            </div>
            <p class="mt-3 text-muted">Đang tải dịch vụ...</p>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .service-card {
            transition: all 0.3s ease;
            border: none;
            border-radius: 10px;
            overflow: hidden;
        }
        
        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        
        .service-image {
            height: 200px;
            object-fit: cover;
            transition: all 0.5s ease;
        }
        
        .service-card:hover .service-image {
            transform: scale(1.05);
        }
        
        .service-price {
            position: absolute;
            top: 15px;
            right: 15px;
            background: rgba(255,255,255,0.9);
            padding: 5px 10px;
            border-radius: 20px;
            font-weight: bold;
            color: var(--primary-color);
        }
        
        .service-body {
            padding: 1.5rem;
        }
        
        .btn-view {
            border-radius: 20px;
            padding: 8px 20px;
            font-weight: 500;
            transition: all 0.3s ease;
        }
    </style>
}

@section Scripts {
    <script src="~/js/services.js"></script>
    <script>
        $(document).ready(function() {
            // Hiệu ứng xuất hiện cho các dịch vụ khi trang tải xong
            setTimeout(function() {
                $('.service-card').each(function(index) {
                    $(this).delay(index * 100).animate({opacity: 1}, 500);
                });
            }, 500);
        });
    </script>
}
