@model IEnumerable<LoanSpa.Models.Service>

@{
    ViewData["Title"] = "Dịch vụ";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Dịch Vụ Của Chúng Tôi</h1>
        <p class="lead">Khám phá các dịch vụ spa cao cấp giúp bạn thư giãn và làm đẹp</p>
    </div>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var service in Model)
            {
                <div class="col-md-4 mb-4" id="@service.ServiceId">
                    <div class="card service-card h-100">
                        <img src="@(string.IsNullOrEmpty(service.Picture) ? "/images/services/default.jpg" : service.Picture)" 
                            class="card-img-top" alt="@service.ServiceName" 
                            style="height: 220px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@service.ServiceName</h5>
                            <p class="card-text">
                                @if (string.IsNullOrEmpty(service.Description))
                                {
                                    <span>Mô tả sẽ được cập nhật sớm.</span>
                                }
                                else
                                {
                                    @(service.Description.Length > 100 ? service.Description.Substring(0, 100) + "..." : service.Description)
                                }
                            </p>
                            <p class="text-primary font-weight-bold">@string.Format("{0:N0}", service.Price) VNĐ / @service.Duration phút</p>
                        </div>
                        <div class="card-footer bg-white d-flex justify-content-between">
                            <a asp-controller="Home" asp-action="ServiceDetail" asp-route-id="@service.ServiceId" class="btn btn-outline-primary">Xem chi tiết</a>
                            <a asp-controller="Home" asp-action="Booking" asp-route-serviceId="@service.ServiceId" class="btn btn-primary">Đặt Lịch</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <h3>Hiện tại không có dịch vụ nào.</h3>
                <p>Vui lòng quay lại sau.</p>
            </div>
        }
    </div>
    
    <div class="text-center mt-4">
        <a href="@Url.Action("Booking", "Home")" class="btn btn-lg btn-success">Đặt Lịch Tư Vấn Miễn Phí</a>
    </div>
</div>
