@{
    ViewData["Title"] = "Admin Dashboard";
    
}

<div class="container py-4">
    <h1>@ViewData["Title"]</h1>
    <p class="lead">Chào mừng đến với bảng điều khiển quản trị.</p>

    <div class="row mt-4">
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Quản lý đặt lịch</h5>
                    <p class="card-text">Xem, chỉnh sửa và quản lý lịch đặt của khách hàng.</p>
                    <a asp-controller="Admin" asp-action="BookingManagement" class="btn btn-primary">Truy cập</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Quản lý người dùng</h5>
                    <p class="card-text">Xem, chỉnh sửa và quản lý người dùng trong hệ thống.</p>
                    <a asp-controller="Admin" asp-action="UserManagement" class="btn btn-primary">Truy cập</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Quản lý phòng</h5>
                    <p class="card-text">Thêm, sửa, xóa phòng và kiểm tra tình trạng phòng.</p>
                    <a asp-controller="Admin" asp-action="RoomManagement" class="btn btn-primary">Truy cập</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Quản lý ghế</h5>
                    <p class="card-text">Quản lý thông tin và tình trạng ghế ngồi.</p>
                    <a asp-controller="Admin" asp-action="ChairManagement" class="btn btn-primary">Truy cập</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Quản lý hóa đơn</h5>
                    <p class="card-text">Xem, xuất và quản lý hóa đơn thanh toán.</p>
                    <a asp-controller="Admin" asp-action="InvoiceManagement" class="btn btn-primary">Truy cập</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Quản lý dịch vụ</h5>
                    <p class="card-text">Thêm, sửa, xóa và quản lý các dịch vụ của spa.</p>
                    <a asp-controller="Admin" asp-action="ServiceManagement" class="btn btn-primary">Truy cập</a>
                </div>
            </div>
        </div>
    </div>
</div>
