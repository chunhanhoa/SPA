@model QL_Spa.Models.EditUserViewModel

@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
    Layout = "_AdminLayout";
}

<div class="container py-4">
    <h1>@ViewData["Title"]</h1>
    
    <div class="mb-4">
        <a asp-controller="Admin" asp-action="UserManagement" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Thông tin tài khoản</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Tên đăng nhập:</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>
                        
                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                    </dl>
                </div>
            </div>
            
            <div class="card mt-4">
                
                <div class="card-body">
                    <form asp-action="EditUser" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UserName" />
                        <input type="hidden" asp-for="Email" />
                        
                        
                        
                        
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="actions-column">
        
        <a href="@Url.Action("ManageUserRoles", "Admin", new { userId = Model.Id })" class="btn btn-info btn-sm">
            <i class="fas fa-user-tag"></i> Phân quyền
        </a>
        
    </div>
</div>
