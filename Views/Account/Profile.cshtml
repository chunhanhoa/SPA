@model LoanSpa.Models.Customer

@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="container py-5 mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <img src="https://via.placeholder.com/150" class="rounded-circle img-fluid" alt="Profile Image" style="width: 150px; height: 150px; object-fit: cover;">
                    </div>
                    <h4>@Model.FullName</h4>
                    <p class="text-muted">Thành viên từ @Model.CreatedDate.ToString("MMM yyyy")</p>
                    <a asp-action="EditProfile" class="btn btn-primary mt-2">Cập nhật thông tin</a>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Thông tin cá nhân</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Họ và tên</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.FullName
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Số điện thoại</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.Phone
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Tổng chi tiêu</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @(Model.TotalAmount.ToString("#,##0 VNĐ") ?? "0 VNĐ")
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Ngày tham gia</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.CreatedDate.ToString("dd/MM/yyyy")
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Lịch sử đặt lịch</h5>
                    <a asp-action="Bookings" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
                </div>
                <div class="card-body">
                    <!-- Hiển thị 3 đặt lịch gần nhất -->
                    <p>Đang tải lịch sử đặt lịch...</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load recent bookings using AJAX
        $(document).ready(function() {
            // Sử dụng API để lấy 3 đặt lịch gần nhất
            const token = localStorage.getItem('token');
            if (token) {
                const userId = JSON.parse(localStorage.getItem('user'))?.id;
                if (userId) {
                    fetch(`/api/Bookings/user/${userId}`, {
                        headers: {
                            'Authorization': `Bearer ${token}`
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        const recentBookings = data.slice(0, 3); // Lấy 3 đặt lịch gần nhất
                        const bookingsContainer = $('.card-body:last');
                        
                        if (recentBookings.length === 0) {
                            bookingsContainer.html('<p>Bạn chưa có lịch đặt nào.</p>');
                            return;
                        }
                        
                        let html = '<div class="list-group">';
                        recentBookings.forEach(booking => {
                            const date = new Date(booking.startTime).toLocaleDateString('vi-VN');
                            const time = new Date(booking.startTime).toLocaleTimeString('vi-VN', { hour: '2-digit', minute: '2-digit' });
                            const services = booking.appointmentServices.map(s => s.service.serviceName).join(', ');
                            
                            html += `
                                <div class="list-group-item border-0 px-0">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">Lịch hẹn ngày ${date}</h6>
                                        <small>${time}</small>
                                    </div>
                                    <p class="mb-1">${services}</p>
                                    <small class="text-muted">Trạng thái: Đã đặt</small>
                                </div>
                            `;
                        });
                        html += '</div>';
                        
                        bookingsContainer.html(html);
                    })
                    .catch(error => {
                        console.error('Lỗi khi lấy dữ liệu đặt lịch:', error);
                        const bookingsContainer = $('.card-body:last');
                        bookingsContainer.html('<p class="text-danger">Đã có lỗi xảy ra khi tải dữ liệu. Vui lòng thử lại sau.</p>');
                    });
                }
            }
        });
    </script>
}
