@model LoanSpa.Models.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container py-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Đăng ký tài khoản mới</h4>
                </div>
                <div class="card-body">
                    <div id="registerMessage"></div>
                    
                    <form id="registerForm" method="post">
                        <div class="mb-3">
                            <label for="registerUsername" class="form-label">Tên đăng nhập</label>
                            <input id="registerUsername" name="Username" class="form-control" required />
                            <span class="text-danger" id="usernameError"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label for="registerFullName" class="form-label">Họ và tên đầy đủ</label>
                            <input id="registerFullName" name="FullName" class="form-control" required />
                            <span class="text-danger" id="fullNameError"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label for="registerPhoneNumber" class="form-label">Số điện thoại</label>
                            <input id="registerPhoneNumber" name="PhoneNumber" class="form-control" type="tel" />
                            <span class="text-danger" id="phoneNumberError"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label for="registerEmail" class="form-label">Email</label>
                            <input id="registerEmail" name="Email" class="form-control" type="email" required />
                            <span class="text-danger" id="emailError"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label for="registerPassword" class="form-label">Mật khẩu</label>
                            <input id="registerPassword" name="Password" class="form-control" type="password" required />
                            <span class="text-danger" id="passwordError"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label for="registerConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                            <input id="registerConfirmPassword" name="ConfirmPassword" class="form-control" type="password" required />
                            <span class="text-danger" id="confirmPasswordError"></span>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input id="agreeTerms" class="form-check-input" type="checkbox" required />
                            <label for="agreeTerms" class="form-check-label">
                                Tôi đồng ý với <a href="/Home/Privacy" target="_blank">điều khoản sử dụng</a> của LoanSpa
                            </label>
                        </div>
                        
                        <button type="submit" class="btn btn-success w-100">Đăng ký</button>
                    </form>
                    
                    <div class="mt-4 text-center">
                        <p>Đã có tài khoản? <a asp-action="Login">Đăng nhập ngay</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/auth.js" asp-append-version="true"></script>
}